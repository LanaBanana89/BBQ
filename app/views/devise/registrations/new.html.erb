<h2>Регистрация пользователя</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  
  <%= render partial: 'partials/form_errors', locals: {model: @user} %>
  <div class="form"> 

    <div class="form-group row">
      <div class="col-xs-6 col-sm-4 col-md-4">      
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Введите адрес эл.почты", class: "form-control" %> 
      </div>      
      <span class = "glyphicon glyphicon-envelope align-middle" style="vertical-align: middle"></span>   
    </div>

    <div class="form-group row">     
      <div class="col-xs-6 col-sm-4 col-md-4">
        <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: "Введите имя" %> 
      </div>
      <span class = "glyphicon glyphicon-user" style="vertical-align: middle"></span>      
    </div>

    <div class="form-group row">     
      <div class="col-xs-6 col-sm-4 col-md-4">
        <%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "Пароль" %> 
      </div>
      <span class = "glyphicon glyphicon-lock" style="vertical-align: middle"></span>      
    </div>

    <div class="form-group row">     
      <div class="col-xs-6 col-sm-4 col-md-4">
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off", placeholder: "Подтверждение пароля" %>
      </div>
      <span class = "glyphicon glyphicon-lock" style="vertical-align: middle"></span>      
    </div>

    <div class="form-group row">
      <div class="col-xs-6 col-sm-4 col-md-4">  
        <%= f.submit "Готово", class: "btn btn-primary" %> 
      </div> 
    </div>
    
    <div class="form-group row">
      <div class="col-xs-6 col-sm-4 col-md-4">
        <%= render "devise/shared/links" %>      
        <%= link_to 'Забыли пароль?', edit_user_registration_path %>
      </div>
    </div>
  </div>

<% end %>


