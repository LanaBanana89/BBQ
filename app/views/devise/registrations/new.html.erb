<h2>Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group"> 
    <div class="row">   
      <%= f.label :email, class: "col-sm-2 control-label" %>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <%= f.label 'Имя', class: "col-sm-2 control-label" %>
    </div>
    <div class="row">
      <div class="col-sm-6">
          <%= f.text_field :name, class: "form-control",autofocus: true %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <%= f.label 'Пароль', class: "col-sm-2 control-label" %>    
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <%= f.label 'Подтверждение пароля', class: "col-sm-4 control-label" %>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="col-sm-6">        
        <%= f.submit "Зарегистрироваться", class: "btn btn-primary" %>  
      </div>
    </div>      
  </div>

  <div class="form-group">    
    <%= render "devise/shared/links" %>      
    <%= link_to 'Забыли пароль?', edit_user_registration_path %>    
  </div> 

<% end %>


